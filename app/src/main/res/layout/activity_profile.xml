<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:background="@drawable/home_shape"
        >

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:gravity="center"
            android:background="@drawable/circle"
            android:backgroundTint="@color/white">
           <androidx.cardview.widget.CardView
               android:layout_width="100dp"
               android:layout_height="100dp"
               app:cardCornerRadius="100dp"
               app:cardBackgroundColor="@color/red"
               app:cardElevation="30dp">
               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:src="@drawable/app_logo_bloodbank"/>
           </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/error"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/red"
        android:gravity="center"
        android:text="c"
        android:textSize="15dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        />

    <LinearLayout
        android:id="@+id/profile_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="40dp"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EBFFFFFF"
            >
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:background="@drawable/profile_text_view">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:gravity="bottom|left"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/baseline_perm_identity_24"
                        android:backgroundTint="@color/diplay_text_color"/>
                    <TextView
                        android:id="@+id/profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textStyle="bold"
                        android:paddingStart="10dp"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        />



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="bottom|left"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/baseline_phone_android_24"
                        android:backgroundTint="@color/diplay_text_color"/>
                    <TextView
                        android:id="@+id/profile_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Number"
                        android:textStyle="bold"
                        android:paddingStart="10dp"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        />



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="bottom|left"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/baseline_location_on_24"
                        android:backgroundTint="@color/diplay_text_color"/>
                    <TextView
                        android:id="@+id/profile_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:textStyle="bold"
                        android:paddingStart="10dp"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="bottom|left"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/baseline_bloodtype_24"
                        android:backgroundTint="@color/red"/>
                    <TextView
                        android:id="@+id/profile_blood_group_donor_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Blood Group + Donor Type"
                        android:textStyle="bold"
                        android:paddingStart="10dp"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        />



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="bottom|left"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/baseline_calendar_month_24"
                        android:backgroundTint="@color/diplay_text_color"/>
                    <TextView
                        android:id="@+id/profile_dob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date Of Birth"
                        android:textStyle="bold"
                        android:paddingStart="10dp"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        />



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="bottom|left"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/baseline_calendar_month_24"
                        android:backgroundTint="@color/diplay_text_color"/>
                    <TextView
                        android:id="@+id/profile_last_donation_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last Donation Date"
                        android:textStyle="bold"
                        android:paddingStart="10dp"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        />




                </LinearLayout>
                <EditText
                    android:id="@+id/edit_profile_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile Info"
                    android:textSize="12dp"
                    android:textColor="@color/red"
                    android:layout_gravity="right"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:backgroundTint="@color/red"
                    android:enabled="false"
                    android:allowClickWhenDisabled="true"
                    />


            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile Info"
                android:layout_marginStart="20dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:background="@color/white"/>
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/editing_profile_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginTop="40dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="40dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@drawable/profile_text_view"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="bottom|left"
            android:weightSum="2">
            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="5dp"
                android:background="@drawable/baseline_perm_identity_24"
                android:backgroundTint="@color/diplay_text_color"/>
            <EditText
                android:id="@+id/edit_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter your name..."
                android:inputType="text"
                android:textColorHint="@color/hint_brown"
                android:textStyle="bold"
                android:paddingStart="10dp"
                android:textSize="20dp"
                android:textColor="@color/black"
                />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center|left"
            android:weightSum="2">
            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:background="@drawable/baseline_minimize_24"
                android:backgroundTint="@color/diplay_text_color"/>
            <Spinner
                android:id="@+id/edit_profile_donor_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blood Group + Donor Type"
                android:textStyle="bold"
                android:paddingStart="10dp"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:enabled="false"
                />



        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="bottom|left"
            android:weightSum="2">
            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="5dp"
                android:background="@drawable/baseline_calendar_month_24"
                android:backgroundTint="@color/diplay_text_color"/>
            <EditText

                android:id="@+id/edit_profile_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Date Of Birth..."
                android:inputType="date"
                android:textColorHint="@color/hint_brown"
                android:textStyle="bold"
                android:paddingStart="10dp"
                android:textSize="20dp"
                android:textColor="@color/black"
                />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="bottom|left"
            android:weightSum="2">
            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="5dp"
                android:background="@drawable/baseline_calendar_month_24"
                android:backgroundTint="@color/diplay_text_color"/>
            <EditText
                android:id="@+id/edit_profile_last_donation_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter Last Donation Date..."
                android:inputType="date"
                android:textColorHint="@color/hint_brown"
                android:textStyle="bold"
                android:paddingStart="10dp"
                android:textSize="20dp"
                android:textColor="@color/black"

                />




        </LinearLayout>
        <Button
            android:id="@+id/btn_changed_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit Changes"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:background="@drawable/button_shape"
            />


    </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="20dp"
       android:gravity="center"
       android:orientation="horizontal">
       <Button
           android:id="@+id/btn_change_password"
           android:layout_width="160dp"
           android:layout_height="wrap_content"
           android:text="Change Password"
           android:textAllCaps="false"
           android:paddingStart="20dp"
           android:paddingEnd="20dp"
           android:layout_marginEnd="10dp"
           android:background="@drawable/button_shape"
           android:layout_gravity="center"/>
       <Button
           android:id="@+id/btn_delete_record"
           android:layout_width="160dp"
           android:layout_height="wrap_content"
           android:text="Remove Your Account"
           android:textAllCaps="false"
           android:paddingStart="20dp"
           android:paddingEnd="20dp"
           android:background="@drawable/button_shape"
           android:layout_gravity="center"/>
   </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="-160dp"
        android:gravity="bottom">
        <Button
            android:id="@+id/btn_log_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:textAllCaps="false"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button_shape"
            android:layout_gravity="center|bottom"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:background="#970202"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:weightSum="4">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:clickable="true">
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:paddingBottom="10dp"
                    android:src="@drawable/baseline_home_24"
                    android:id="@+id/btn_home"
                    android:background="@color/red"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:layout_marginTop="-23dp"
                    android:paddingBottom="5dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/btn_donor"
                    android:paddingBottom="10dp"
                    android:src="@drawable/baseline_groups_2_24"
                    android:background="@color/red"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Donor"
                    android:layout_marginTop="-23dp"
                    android:paddingBottom="5dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:clickable="true">
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:paddingBottom="10dp"
                    android:id="@+id/btn_explore"
                    android:src="@drawable/baseline_explore_24"
                    android:background="@color/red"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Explore"
                    android:layout_marginTop="-23dp"
                    android:paddingBottom="5dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:clickable="true">
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:paddingBottom="10dp"
                    android:src="@drawable/baseline_request_page_24"
                    android:background="@color/red"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Request"
                    android:layout_marginTop="-23dp"
                    android:paddingBottom="5dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>